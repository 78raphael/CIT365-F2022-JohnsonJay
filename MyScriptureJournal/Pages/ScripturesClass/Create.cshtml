@page "{id:int?}"
@model MyScriptureJournal.Pages.ScripturesClass.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h5>Add a Scripture and a journal note</h5>
<hr />
<div class="row">
    <div class="col-md-4 d-grid gap-3">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group p-2">
                <label asp-for="ScriptureClass.DateAdded" class="control-label"></label>
                <input asp-for="ScriptureClass.DateAdded" class="form-control" />
                <span asp-validation-for="ScriptureClass.DateAdded" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <label asp-for="ScriptureClass.Book" class="control-label"></label>
                <input asp-for="ScriptureClass.Book" class="form-control" />
                <span asp-validation-for="ScriptureClass.Book" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <label asp-for="ScriptureClass.Chapter" class="control-label"></label>
                <input asp-for="ScriptureClass.Chapter" class="form-control" />
                <span asp-validation-for="ScriptureClass.Chapter" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <label asp-for="ScriptureClass.Verse" class="control-label"></label>
                <input asp-for="ScriptureClass.Verse" class="form-control" />
                <span asp-validation-for="ScriptureClass.Verse" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <label asp-for="ScriptureClass.Note" class="control-label"></label>
                <input asp-for="ScriptureClass.Note" class="form-control" />
                <span asp-validation-for="ScriptureClass.Note" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <button type="submit" value="Create" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index" role="button" class="btn btn-outline-light">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
