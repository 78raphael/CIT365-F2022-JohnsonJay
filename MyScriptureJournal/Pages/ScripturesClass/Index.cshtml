@page "{searchString?}"
@model MyScriptureJournal.Pages.ScripturesClass.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create" role="button" class="btn btn-primary">Create New</a>
</p>

<form>
    <p>
        <select asp-for="ScriptureBook" asp-items="Model.BookList">
            <option value="">All</option>
        </select>
        BookSearch: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ScriptureClass[0].DateAdded)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScriptureClass[0].Book)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScriptureClass[0].Chapter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScriptureClass[0].Verse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScriptureClass[0].Note)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ScriptureClass) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateAdded)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Chapter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Verse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                <a asp-page="./Edit" role="button" class="btn btn-primary" asp-route-id="@item.ID">Edit</a> 
                <a asp-page="./Details" role="button" class="btn btn-primary" asp-route-id="@item.ID">Details</a> 
                <a asp-page="./Delete" role="button" class="btn btn-danger" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
